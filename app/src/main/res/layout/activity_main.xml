<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:paddingBottom="@dimen/parent_padding_top"
    android:paddingLeft="@dimen/parent_padding_left"
    android:paddingRight="@dimen/parent_padding_left"
    android:paddingTop="@dimen/parent_padding_top">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="3dp">

        <ViewFlipper
            android:id="@+id/viewFlipper1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <fragment
                android:id="@+id/fragmentFS1"
                android:name="org.unicauca.middlewaretv.fragments.FrontSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_frontside" />

            <fragment
                android:id="@+id/fragmentRS1"
                android:name="org.unicauca.middlewaretv.fragments.RearSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_rearside" />
        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/viewFlipper2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <fragment
                android:id="@+id/fragmentFS2"
                android:name="org.unicauca.middlewaretv.fragments.FrontSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_frontside" />

            <fragment
                android:id="@+id/fragmentRS2"
                android:name="org.unicauca.middlewaretv.fragments.RearSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_rearside" />
        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/viewFlipper3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|top"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <fragment
                android:id="@+id/fragmentFS3"
                android:name="org.unicauca.middlewaretv.fragments.FrontSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_frontside" />

            <fragment
                android:id="@+id/fragmentRS3"
                android:name="org.unicauca.middlewaretv.fragments.RearSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_rearside" />
        </ViewFlipper>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ViewFlipper
            android:id="@+id/viewFlipper4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <fragment
                android:id="@+id/fragmentFS4"
                android:name="org.unicauca.middlewaretv.fragments.FrontSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_frontside" />

            <fragment
                android:id="@+id/fragmentRS4"
                android:name="org.unicauca.middlewaretv.fragments.RearSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_rearside" />
        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/viewFlipper5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <fragment
                android:id="@+id/fragmentFS5"
                android:name="org.unicauca.middlewaretv.fragments.FrontSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_frontside" />

            <fragment
                android:id="@+id/fragmentRS5"
                android:name="org.unicauca.middlewaretv.fragments.RearSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_rearside" />
        </ViewFlipper>

        <ViewFlipper
            android:id="@+id/viewFlipper6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <fragment
                android:id="@+id/fragmentFS6"
                android:name="org.unicauca.middlewaretv.fragments.FrontSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_frontside" />

            <fragment
                android:id="@+id/fragmentRS6"
                android:name="org.unicauca.middlewaretv.fragments.RearSideFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/layout_fragment_rearside" />
        </ViewFlipper>

    </TableRow>
</TableLayout>